{% import 'components/form/fields_macros.html.twig' as fields %}

{% set rand = rand|default(random()) %}
<div class="firstbloc">
    <form id="{{ itemtype|lower ~ "_form" ~ rand }}" name="{{ itemtype|lower ~ "_form" ~ rand }}" method="post" action="{{ form_url }}">
        <table class="tab_cadre_fixe">
            <tr class="tab_bg_2">
                <th colspan="2">{{ form_title }}</th>
            </tr>
            <tr class="tab_bg_2">
                <td class="right">
                    <input type="hidden" name="{{ items_name }}" value="{{ items_id }}">
                    {{ fields.dropdownArrayField('num', readonlyfields|first, readonlyfields, '', {'used': used}) }}
                </td>
                <td class="center">
                    &nbsp;<input type="submit" name="add" value="{{ _x('button', 'Add') }}" class="btn btn-primary">
                </td>
            </tr>
        </table>
        {{ fields.hiddenField('_glpi_csrf_token', csrf_token()) }}
    </form>
</div>
