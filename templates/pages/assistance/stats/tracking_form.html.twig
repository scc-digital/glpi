{% import 'components/form/fields_macros.html.twig' as fields %}

<form method="get" name="form" action="stat.tracking.php">
    <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
    <input type="hidden" name="itemtype" value="{{ itemtype }}">
    <input type="hidden" name="value2" value="{{ value2 }}">

    <div class="card mx-auto mb-3">
        <div class="card-body">

            <div class="d-flex align-items-center">
                <div>
                    {{ fields.dropdownArrayField(
                        'type',
                        type,
                        types,
                        _n('Field', 'Fields', 1),
                        {
                            'full_width': true
                        }
                    ) }}
                </div>

                <div>
                    {{ fields.dateField(
                        'date1',
                        date1,
                        __('Start date'),
                        {
                            'full_width': true
                        }
                    ) }}

                    {{ fields.dateField(
                        'date2',
                        date2,
                        __('End date'),
                        {
                            'full_width': true
                        }
                    ) }}
                </div>

                <div>
                    {{ fields.checkboxField(
                        'showgraph',
                        showgraph,
                        __('Show graphics'),
                        {
                            'full_width': true,
                            'full_width_adapt_column': false,
                            'label_class': 'col-12',
                            'input_class': 'col-12 center',
                        }
                    ) }}
                </div>

                <input type="submit" class="btn btn-primary ms-auto"
                       value="{{ __('Display report') }}">
            </div>
        </div>
    </div>
</form>
